        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/secondary_background"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="186dp"
            android:layout_height="32dp"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:layout_marginStart="19dp"
            android:padding="16dp"
            app:cardBackgroundColor="@color/third_background"
            app:cardCornerRadius="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans_bold"
                android:text="Plan na poniedziałek"
                android:textColor="#000000"
                android:textSize="16sp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/inputframeMondaySchedule"
            android:layout_width="295dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="58dp"
            android:padding="16dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp"
            app:strokeColor="#B7B7B7"
            app:strokeWidth="2dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mondayButton"
                android:layout_width="126dp"
                android:layout_height="32dp"
                android:layout_gravity="start"
                android:layout_marginTop="11dp"
                android:layout_marginStart="10dp"
                android:padding="16dp"
                app:cardBackgroundColor="@color/secondary"
                app:cardCornerRadius="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="Dodaj zdjęcie"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>

